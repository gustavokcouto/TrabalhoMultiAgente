        instances: 10
        focus: simulation.counter
    }
    agent solar:solar_local.asl {
        instances: 5
        focus: simulation.counter
    }
    agent eolica:eolica_local.asl {
        instances: 5
        focus: simulation.counter
    }
    agent hydroelectric {
        instances: 5
        focus: simulation.counter
    }
    agent thermoelectric {
        instances: 2
        focus: simulation.counter
    }
    workspace simulation {
        artifact counter : electric_market.CameraComercio()
    }
}

